<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_move_zoom_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:weightSum="3"
        android:visibility="visible"
        android:gravity="center"
        android:background="@drawable/shape_button"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rowsdd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_margin="13dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_current_queue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_current"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/txt_current_queue_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="A105"
                android:textColor="#ff6600"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowsss"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="13dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_waiting_business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="WAITING"
                android:textColor="#fff"
                android:fontFamily="@font/gothicb"
                android:textSize="10dp"/>


            <TextView
                android:id="@+id/txt_waiting_srvice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/centurygothic"
                android:gravity="center"
                android:text="WAITING"
                android:textColor="#fff"
                android:textSize="8dp"/>


            <TextView
                android:id="@+id/txt_waiting_queue_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="12"
                android:textColor="#ff6600"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/txt_cancel_queue_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="#ff6600"
                android:text="Cancel"
                android:textColor="#fff"
                android:textStyle="normal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowsd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_margin="13dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_customer_named"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_mr"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/txt_my_queue_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="A102"
                android:textColor="#ff6600"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>