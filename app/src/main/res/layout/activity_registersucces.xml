<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/lintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_weight="48"
            android:background="@drawable/shape_reg_success">
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/txt_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lintop"
        android:text="Register"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/gothicb"
        android:textSize="40dp"
        android:layout_marginTop="30dp"
        android:gravity="left|center"
        android:layout_marginLeft="30dp"/>


    <TextView
        android:id="@+id/txt_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_top"
        android:text="we need some of your basic information to start the super exciting journey"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/centurygothic"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"/>


    <TextView
        android:id="@+id/signup"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_below="@+id/txt_subtext"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/gothicb"
        android:background="@drawable/shape_reg_start"
        android:text="GET STARTED "
        android:onClick="getstart"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_weight="48"
            android:layout_gravity="right"
            android:background="@drawable/shape_reg_bottom_success">
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>